<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rakiroad.androidalarmclock.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="@color/background"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TimePicker
            android:id="@+id/timePicker"
            android:headerBackground="@color/primOne"
            android:numbersSelectorColor="@color/primOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="3dp" />

        <Button
            android:id="@+id/alarm_on"
            android:background="@color/primOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm"
            tools:layout_editor_absoluteX="-139dp"
            tools:layout_editor_absoluteY="442dp"
            android:layout_above="@+id/alarm_status"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" />

        <Button
            android:id="@+id/alarm_off"
            android:background="@color/primOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="End Alarm"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="358dp"
            android:layout_below="@+id/timePicker"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/alarm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alarm_off"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Alarm is off!"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="440dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
